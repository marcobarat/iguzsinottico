<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:c="sap.ui.commons" xmlns="sap.m"
          xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:t="sap.ui.table"
          xmlns:f="sap.ui.layout.form" xmlns:comp="plantvim.component"
          controllerName="plantvim.controller.Main">
    <Page title="{locale>plantvim.view.title}"
          showHeader="false"
          enableScrolling="false">
        <content>
            <VBox height="100%">
                <HBox width="100%">
                    <HBox width="85%" alignItems="Center"
                          justifyContent="Center">
                        <Label text="Stato Produttivo Macchine" design="Bold" class="vimAreaLabel2"/>
                    </HBox>
                    <HBox width="15%" alignItems="Center"
                          justifyContent="End">
                        <Image
                            src="images/iguzlogo.png"
                            densityAware="false"
                            width="12rem" class="mainViewLogo">
                        </Image>
                    </HBox>
                </HBox>
                <HBox width="100%" height="100%">
                    <HBox width="30%" height="100%">

                    </HBox>
                    <HBox width="40%" height="100%" alignItems="Center"
                          justifyContent="SpaceBetween">
                        <comp:PodButton width="180px" press="plantS"
                                        iconImg="images/ico1.png" iconSize="10rem" imgAreaSize="6rem"
                                        text="Injection Machines"/>
                        <!-- <comp:PodButton width="180px" press="plantSA1" imgAreaSize="6rem"
                                        iconImg="images/ico2.png" iconSize="10rem"
                                        text="Reparto &quot;SA1&quot;"/> -->
                    </HBox>
                    <HBox width="30%" height="100%">

                    </HBox>
                </HBox>
            </VBox>
        </content>
    </Page>
</mvc:View>
